
@{
    
    Layout = null;
}

<html>
<head>
    
        <meta name="viewport" content="width=device-width" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
               
        <script src="~/Scripts/jquery-1.10.2.js"></script>
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <title>Login</title>

    <title>Login</title>
</head>
<body>
    
    @using (Html.BeginForm(actionName: "GetLogin", controllerName: "Login"))
    {
        @Html.AntiForgeryToken()


        <div style="margin-top:100px;">
                <div class="container">
                    <h2 class="text-center">Login</h2>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="form-group">
                                <input id="txtusername" name="UserName" type="text" class="form-control" placeholder="Username" required="required">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">

                            <div class="form-group">
                                <input id="txtpassword" name="Password" type="password" class="form-control" placeholder="Password" required="required">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 col-md-offset-4">
                            <div class="form-group">
                                <button id="btnlogin" type="submit" class="btn btn-primary btn-block">
                                <p style="font-size: 25px; margin:auto; font-weight: bold; color:#ffffff; text-align: center">Go</p></button>
                            </div>
                        </div>
                    </div>

                    <br />
                    @{

                        if (TempData["ResultLogin"] != null)
                        {
                            <h5 class="text-center">@TempData["ResultLogin"]</h5>
                        }

                    }

                    <br />
                    <h6 class="text-center">Powered by <a href="http://techzimal.com" target="_blank"> Techzimal </a></h6>
                </div>
                   
                   


                </div>

                    }
</body>
</html>